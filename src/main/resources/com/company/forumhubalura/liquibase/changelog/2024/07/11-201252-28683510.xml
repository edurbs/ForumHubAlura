<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ForumHubAlura">
        <createTable tableName="CURSO">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CURSO"/>
            </column>
            <column name="NOME" type="VARCHAR(255)"/>
            <column name="CATEGORIA" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="ForumHubAlura">
        <createTable tableName="PERFIL">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PERFIL"/>
            </column>
            <column name="NOME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="ForumHubAlura">
        <createTable tableName="RESPOSTA">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RESPOSTA"/>
            </column>
            <column name="MENSAGEM" type="VARCHAR(255)"/>
            <column name="TOPICO_ID" type="UUID"/>
            <column name="AUTOR_ID" type="UUID"/>
            <column name="SOLUCAO" type="VARCHAR(255)"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="ForumHubAlura">
        <createTable tableName="TOPICO">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TOPICO"/>
            </column>
            <column name="TITULO" type="VARCHAR(255)"/>
            <column name="MENSAGEM" type="VARCHAR(255)"/>
            <column name="STATUS" type="VARCHAR(255)"/>
            <column name="AUTOR_ID" type="UUID"/>
            <column name="CURSO_ID" type="UUID"/>
            <column name="RESPOSTAS" type="VARCHAR(255)"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="ForumHubAlura">
        <createTable tableName="USER_PERFIL_LINK">
            <column name="PERFIL_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_PERFIL_LINK"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_PERFIL_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="6" author="ForumHubAlura">
        <createIndex indexName="IDX_RESPOSTA_AUTOR" tableName="RESPOSTA">
            <column name="AUTOR_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="AUTOR_ID" baseTableName="RESPOSTA"
                                 constraintName="FK_RESPOSTA_ON_AUTOR" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="7" author="ForumHubAlura">
        <createIndex indexName="IDX_RESPOSTA_TOPICO" tableName="RESPOSTA">
            <column name="TOPICO_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="TOPICO_ID" baseTableName="RESPOSTA"
                                 constraintName="FK_RESPOSTA_ON_TOPICO" referencedColumnNames="ID"
                                 referencedTableName="TOPICO"/>
    </changeSet>
    <changeSet id="8" author="ForumHubAlura">
        <createIndex indexName="IDX_TOPICO_AUTOR" tableName="TOPICO">
            <column name="AUTOR_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="AUTOR_ID" baseTableName="TOPICO" constraintName="FK_TOPICO_ON_AUTOR"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="9" author="ForumHubAlura">
        <createIndex indexName="IDX_TOPICO_CURSO" tableName="TOPICO">
            <column name="CURSO_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CURSO_ID" baseTableName="TOPICO" constraintName="FK_TOPICO_ON_CURSO"
                                 referencedColumnNames="ID" referencedTableName="CURSO"/>
    </changeSet>
    <changeSet id="10" author="ForumHubAlura">
        <addForeignKeyConstraint baseColumnNames="PERFIL_ID" baseTableName="USER_PERFIL_LINK"
                                 constraintName="FK_USEPER_ON_PERFIL" referencedColumnNames="ID"
                                 referencedTableName="PERFIL"/>
    </changeSet>
    <changeSet id="11" author="ForumHubAlura">
        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="USER_PERFIL_LINK"
                                 constraintName="FK_USEPER_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
</databaseChangeLog>