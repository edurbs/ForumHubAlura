<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://cursoListView.title"
      focusComponent="cursoesDataGrid">
    <data>
        <collection id="cursoesDc"
                    class="com.company.forumhubalura.entity.Curso">
            <fetchPlan extends="_base"/>
            <loader id="cursoesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Curso e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="cursoesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="cursoesDataGrid.create"/>
            <button id="editBtn" action="cursoesDataGrid.edit"/>
            <button id="removeBtn" action="cursoesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="cursoesDl"/>
        </hbox>
        <dataGrid id="cursoesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="cursoesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="nome"/>
                <column property="categoria"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
